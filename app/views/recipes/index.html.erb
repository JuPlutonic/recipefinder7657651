<h1>Searching for - <%= @search_term %></h1>

<table border="1">
	<tr>
		<th>Thumbnail of the recipe</th>
		<th>Title</th>
		<th>Social rank</th>
	</tr>
	<% @recipes.each do |recipe| %>
		<tr class=<%= cycle('even', 'odd') %>>
			<td><%= link_to(image_tag(recipe["image_url"], size: "128x80"), recipe["source_url"]) %></td>
			<td><%= link_to(strip_tags(recipe["title"]).html_safe, recipe["source_url"]) %></td>
			<td><%= formatted_rank(recipe["social_rank"]) %></td>
		</tr>
	<% end %>
</table>
